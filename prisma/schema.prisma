generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/database.db"
}

model game {
  id               Int          @id @unique(map: "sqlite_autoindex_game_1") @default(autoincrement())
  name             String       @unique(map: "gane.name")
  europeRelease    Boolean      @default(false)
  usaRelease       Boolean      @default(false)
  japanRelease     Boolean      @default(false)
  australiaRelease Boolean      @default(false)
  addedOn          DateTime     @default(now())
  collection       collection[]
}

model collection {
  id         Int      @id @unique(map: "sqlite_autoindex_collection_1") @default(autoincrement())
  userId     Int
  gameId     Int
  adquiredOn DateTime
  price      Float?
  game       game     @relation(fields: [gameId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  user       user     @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model user {
  id         Int          @id @unique(map: "sqlite_autoindex_user_1") @default(autoincrement())
  email      String       @unique(map: "user.email")
  password   String
  createdOn  DateTime     @default(now())
  collection collection[]
}
